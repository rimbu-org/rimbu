{
  "pluginsConfig": {
    "@nx/js": {
      "analyzeSourceFiles": false
    },
    "@nrwl/js": {
      "analyzeSourceFiles": false
    }
  },
  "tasksRunnerOptions": {
    "default": {
      "runner": "nx/tasks-runners/default",
      "options": {
        "cacheableOperations": [
          "build",
          "bundle",
          "bundle:main",
          "bundle:module",
          "bundle:types",
          "format",
          "format:check",
          "lint",
          "test",
          "typecheck",
          "test:types"
        ]
      }
    }
  },
  "targetDefaults": {
    "build": {
      "dependsOn": ["^build"]
    },
    "bundle": {
      "dependsOn": ["^bundle"]
    },
    "bundle:cjs": {
      "dependsOn": ["^bundle:cjs"],
      "outputs": ["{projectRoot}/dist/cjs"]
    },
    "bundle:esm": {
      "dependsOn": ["^bundle:esm"],
      "outputs": ["{projectRoot}/dist/esm"]
    },
    "bundle:types": {
      "dependsOn": ["^bundle:types"],
      "outputs": ["{projectRoot}/dist/types"]
    },
    "build:deno": {
      "outputs": ["{projectRoot}/../../deno_dist"]
    }
  }
}
