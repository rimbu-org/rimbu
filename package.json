    }
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/rimbu-org/rimbu.git"
  },
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "build": "lerna run build",
    "docsify": "docsify serve docs",
    "format": "yarn format:root && lerna run format",
    "format:root": "prettier --write \"*.{ts,tsx,js,json,md}\" \"{config,docs}/**/*.{ts,tsx,js,json,md}\"",
    "lint": "lerna run lint --parallel",
    "prepare": "husky install",
    "postinstall": "husky install",
    "prerelease": "yarn typecheck && yarn test:types && yarn test && yarn test:random",
    "publish-all": "lerna publish",
    "setup": "yarn && yarn bootstrap",
    "test": "lerna run test",
    "test:types": "lerna run test:types",
    "test:random": "lerna run test:random",
    "typecheck": "lerna run typecheck"
  },
  "lint-staged": {
    "*.{ts,tsx,js,json,md}": "eslint -c ./config/.eslintrc.json  --cache --fix",
    "*.{ts,tsx,js,json,md}--parallel": "prettier --write"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "docsify-cli": "^4.4.3",
    "eslint": "^7.25.0",
    "husky": "^6.0.0",
    "lerna": "^4.0.0",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "tsd": "^0.14.0"
  },
  "workspaces": [
    "packages/*"
  ]
}
