{
  "name": "@rimbu/actor",
  "version": "0.15.9",
  "description": "State management tools to create stateful logic that can be easily integrated in any framework",
  "keywords": [
    "redux",
    "state management",
    "immutable",
    "rimbu",
    "typescript"
  ],
  "homepage": "https://rimbu.org",
  "author": {
    "name": "Arvid Nicolaas",
    "email": "arvid@rimbu.org",
    "url": "https://github.com/vitoke"
  },
  "license": "MIT",
  "funding": [
    {
      "type": "individual",
      "url": "https://github.com/sponsors/vitoke"
    }
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rimbu-org/rimbu.git",
    "directory": "packages/actor"
  },
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/esm/main/index.d.mts",
      "import": "./dist/esm/main/index.mjs"
    },
    "./immer": {
      "types": "./dist/esm/immer/index.d.mts",
      "import": "./dist/esm/immer/index.mjs"
    },
    "./patch": {
      "types": "./dist/esm/patch/index.d.mts",
      "import": "./dist/esm/patch/index.mjs"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "yarn clean && yarn bundle",
    "bundle": "tsc --p tsconfig.esm.json",
    "clean": "rimraf dist",
    "format": "yarn format:base --write",
    "format:base": "prettier \"{!CHANGELOG.md}|**/**/*.{ts,tsx,js,mts,mjs,json,md}\"",
    "format:check": "yarn format:base --check",
    "lint": "eslint src",
    "test": "TZ=UTC vitest run",
    "test:cov": "TZ=UTC vitest run --coverage",
    "test:watch": "TZ=UTC vitest",
    "typecheck": "tsc"
  },
  "dependencies": {
    "@rimbu/common": "^2.0.7",
    "tslib": "^2.8.1"
  },
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "devDependencies": {
    "@rimbu/stream": "^3.0.3",
    "happy-dom": "^9.20.3",
    "immer": "^10.0.3"
  },
  "optionalDependencies": {
    "immer": "^10.0.3"
  }
}
